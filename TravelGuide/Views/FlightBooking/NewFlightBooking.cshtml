@model TravelGuide.Entiteis.Models.FlightBooking

@{
    ViewData["Title"] = "NewFlightBooking";
    Layout = "_templateLayout";

}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Create Flight Booking</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <form class="form-contact contact_form" asp-action="Create" id="contactForm">
            <div class="row">
                <input asp-for="FlightId" class="form-control" hidden />
                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="SeatNumber" class="control-label"></label>
                        <select asp-for="SeatNumber" class="form-control" asp-items="ViewBag.AvailableSeats">
                            <option value="">Select a seat</option>
                        </select>
                        <span asp-validation-for="SeatNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="Class" class="control-label"></label>
                        <select asp-for="Class" class="form-control">
                            <option value="">Select a Class</option>
                            <option value="Economy">Economy</option>
                            <option value="First Class">First Class</option>
                        </select>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <input class="form-control" asp-for="BookingDate" name="BookingDate" id="BookingDate" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter the DepartureTime'" placeholder='Enter the Booking Date'>
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                </div>
                <input class="form-check-input" asp-for="BookingStatus" hidden />
            </div>
            <div class="form-group mb-3 text-right">
                <button type="button" class="button button-contactForm btn_1" onclick="window.location='@Url.Action("Index", "FlightBooking")'">Cancel</button>
                <button type="submit" value="create" class="button button-contactForm btn_1" style="background-color:#162b45;">Create</button>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
