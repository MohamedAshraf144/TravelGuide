@model TravelGuide.Entiteis.Models.Location

@{
    ViewData["Title"] = "Delete Location";
    Layout = "_templateLayout";
}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Delete Location</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <form class="form-contact contact_form" asp-action="Delete" enctype="multipart/form-data" id="contactForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="hidden" asp-for="LocationId" />
                    <div class="form-group">
                        <input class="form-control" asp-for="LocationName" name="LocationName" id="LocationName" type="text" disabled placeholder='Location Name'>
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Country" name="Country" id="Country" type="text" disabled placeholder='Country'>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Description" name="Description" id="Description" type="text" disabled placeholder='Description'>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group mb-3">
                    <div class="custom-file-upload">
                        <label for="file-upload" class="file-upload-label">Choose File</label>
                        <span id="file-name" class="file-name">

                        @if (Model != null && !string.IsNullOrEmpty(Model.ImageUrl))
                        {
                        @System.IO.Path.GetFileName(Model.ImageUrl).Substring(System.IO.Path.GetFileName(Model.ImageUrl).IndexOf('_') + 1)
                        ;
                        }
                        </span>
                        <input type="file" id="file-upload" asp-for="ImageFile" class="file-upload" disabled />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 text-right flex flex-row">
                <button type="button" class="button button-contactForm btn_1" onclick="window.location='@Url.Action("Index", "Location")'" style="background-color:#162b45;">Cancel</button>
                <button type="submit" value="Delete" class="button button-contactForm btn_1">Delete</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .custom-file-upload {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        padding: 5px;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

    .file-upload-label {
        background-color: #fe5c24;
        color: white;
        padding: 10px 12px;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
        margin-top: 5px;
        transition: background-color 0.3s, border 0.3s;
    }

        .file-upload-label:hover {
            background-color: #e54c1f;
        }

    .file-name {
        flex-grow: 1;
        font-size: 14px;
        color: #555;
    }

    .file-upload {
        display: none;
    }
</style>