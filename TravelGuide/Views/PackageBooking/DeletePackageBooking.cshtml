@model TravelGuide.Entiteis.Models.PackageBooking


@{
    ViewData["Title"] = "Delete Package Booking";
    Layout = "_templateLayout";
}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Delete Package Booking</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <form class="form-contact contact_form" asp-action="Delete">
            <div class="row">
                <input asp-for="BookingId" class="form-control" hidden />
                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="NumberOfGuests" class="control-label"></label>
                        <input asp-for="NumberOfGuests" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="TravelPackage" class="control-label"></label>
                        <select asp-for="TravelPackage.PackageId" class="form-control" disabled>
                            <option value="@Model.TravelPackage.PackageId" selected>@Model.TravelPackage.Description</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="BookingDate" class="control-label"></label>
                        <input asp-for="BookingDate" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-sm-12" hidden>
                    <div class="form-group">
                        <label asp-for="BookingStatus" class="control-label"></label>
                        <input asp-for="BookingStatus" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 text-right">
                <button type="button" class="button button-contactForm btn_1" onclick="window.location='@Url.Action("Index", "PackageBooking")'" >Cancel</button>
                <input type="submit" value="Delete" class="button button-contactForm btn_1 btn-danger" style="background-color:#162b45;" />
            </div>
        </form>
    </div>
</div>
