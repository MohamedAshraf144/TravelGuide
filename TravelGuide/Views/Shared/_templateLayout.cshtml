<body>
    <!--::header part start::-->
    <header class="main_menu">
        
        <div class="main_menu_iner">
            <div class="container">
                <div class="row align-items-center ">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg navbar-light justify-content-between">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/template/img/logo.png" alt="logo"> </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse main-menu-item justify-content-center"
                                 id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                     <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item text-nowrap" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a>
                                            <a class="dropdown-item text-nowrap" asp-area="" asp-controller="RoomBooking" asp-action="Index">Room Booking</a>
                                        </div>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-nowrap" asp-area="" asp-controller="Location" asp-action="Index">Locations</a>
                                    </li>
                                     <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" asp-area="" asp-controller="Flight" asp-action="Index">Flights</a>
                                        <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="" asp-controller="Flight" asp-action="Index">Flights</a>
                                        <a class="dropdown-item text-nowrap" asp-area="" asp-controller="FlightBooking" asp-action="Index">Flight Bookings</a>
                                        </div>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" asp-area="" asp-controller="TravelPackages" asp-action="Index">Travel Package</a>
                                        <div class="dropdown-menu">
                                        <a class="dropdown-item text-nowrap " asp-area="" asp-controller="TravelPackages" asp-action="Index">Travel Package</a>
                                        <a class="dropdown-item text-nowrap " asp-area="" asp-controller="PackageBooking" asp-action="Index">Package Booking</a>
                                        </div>
                                    </li>                      
                                    <li class="nav-item text-nowrap">
                                        <a class="nav-link text-nowrap" asp-area="" asp-controller="WatchlistItem" asp-action="Index">Watched List </a>
                                    </li>
                                    
                                    <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Payment" asp-action="Index">Payments</a>
                                    </li>

                                </ul>
                            </div>
                            <partial name="_LoginPartial" />

                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header part end-->

    @RenderBody()
    <!-- footer part start-->
    <footer class="footer-area">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-sm-6 col-md-5">
                    <div class="single-footer-widget">
                        <h4>Discover Destination</h4>
                        <ul>
                            <li><a href="#">Miami, USA</a></li>
