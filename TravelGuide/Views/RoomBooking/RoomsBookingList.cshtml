@model IEnumerable<TravelGuide.Entiteis.Models.RoomBooking>

@{
    ViewData["Title"] = "RoomsBookingList";
    Layout = "_templateLayout";

}
<div class="container">
    <div class="row align-items-center ">
        <div class="col-lg-12">
            <div class="col-12">
                <h2 class="contact-title text-center m-5 text-italic">Room Bookings</h2>
            </div>
            <table class="table table-striped">
                <thead class="shadow" style="color: #0c3e72;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Room.RoomNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hotel.HotelName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChickInDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChickOutDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BookingDate)
                        </th>
  @*                       <th>
                            @Html.DisplayNameFor(model => model.TotalPrice)
                        </th> *@
                        <th>
                            @Html.DisplayNameFor(model => model.BookingStatus)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room.RoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotel.HotelName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChickInDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChickOutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingDate)
                        </td>
@*                         <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingStatus)
                        </td>
                        <td>
                            @{
                                if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.BookingId" style="padding:5px 5px; color: #0c3e72;">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.BookingId" style="padding:5px 5px;color: #fe5b24d0; ">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                }
                            }
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
